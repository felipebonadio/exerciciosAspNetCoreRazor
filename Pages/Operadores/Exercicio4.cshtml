@page
@model Exercicios.Pages.Operadores.Exercicio4Model
@{
    ViewData["Title"] = "Op. Mat. - Ex.04";
}

<h1 class="text-center display-4">Operadores Matemáticos</h1>
<h2 class="text-center display-4">Exercício 4</h2>
<p>
    Elabore um algoritmo que calcule a equação do 2º grau.
</p>
<form method="post">
    <div class="form-group">
        <label for="a">Valor de A</label>
        <input type="text" class="form-control" id="a" name="a" placeholder="Digite o valor de A" required>
    </div>
    <div class="form-group">
        <label for="b">Valor de B</label>
        <input type="text" class="form-control" id="b" name="b" placeholder="Digite o valor de B">
    </div>
    <div class="form-group">
        <label for="c">Valor de C</label>
        <input type="text" class="form-control" id="c" name="c" placeholder="Informe o valor de C">
    </div>
    
    <button type="submit" class="btn btn-primary">Calcular</button>
    <p class="mt-3 text-center">@ViewData["Resultado"]</p>
</form>